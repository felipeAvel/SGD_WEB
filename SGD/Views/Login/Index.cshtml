                <div class="col-xl-3 col-md-8">
                    <form action="@Url.Action("Index","Login")" method="post" class="bg-white rounded shadow-5-strong p-5">
                        <div class="text-center">
                            <img src="~/Content/img/kaiadmin/logo.png" style="width:40%;height:40%"/>
                            <p class="text-dark text-center" style="font-size:11px">
                                BR3DPRINT v1.1.1
                            </p>
                        </div>
                        <div class="form-outline mb-4">
                            <label class="form-label">Usuário</label>
                            <input type="text" name="login" class="form-control" value="@User.Identity.Name" />
                        </div>
                        <div class="form-outline mb-4">
                            <label class="form-label">Senha</label>
                            <input type="password" name="senha" class="form-control" />
                        </div>
                        @if (ViewBag.ErrorUser != null)
                        {
                            <p class="text-danger">
                                Usuário o Senha estão incorretos, verifique se os dados foram digitados corretamente,s
                                caso o erro persista, entre em contato com os Adiministradores.
                            </p>
                        }
                        <br />
                        <button type="submit" class="btn btn-dark" style="width:100%">Login</button>
                    </form>
                </div>

            </div>
        </div>
