<div class="container" style="background-color:#f5f7fd">
    <div class="page-inner">
        <div class="page-header">
            <h3 class="fw-bold mb-3">Cadastrar Pedido</h3>
            <ul class="breadcrumbs mb-3">
                <li class="nav-home">
                    <a href="@Url.Action("Index","Home")">
                        <i class="fa fa-home"></i>
                    </a>
                </li>
                <li class="separator">
                    <i class="fa-solid fa-arrow-right"></i>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("Index","Home")">Home</a>
                </li>
                <li class="separator">
                    <i class="fa-solid fa-arrow-right"></i>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("Index","Cliente")">Clientes</a>
                </li>
                <li class="separator">
                    <i class="fa-solid fa-arrow-right"></i>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("CadastrarPedidos","Cliente")">Cadastrar Pedido</a>
                </li>
            </ul>
        </div>
        <div class="col-md-12">
            <div class="card card-round">
                <div class="card-header">
                    <div class="card-title">Dados</div>
                    <div class="card-category">
                        Preencha com todas as informações necessárias
                    </div>
                </div>
                <div class="card-body">
                    @*1-BLOCO-START*@
                    <div class="row">
                        <div class="col-md-6 col-lg-12">
                            <div class="form-group">
                                <label for="descricao">Descrição do Pedido</label>
                                <textarea class="form-control" id="descricao" name="descricao" rows="5"></textarea>
                                <small id="descricaoHelp" class="form-text text-muted">
                                    Lembre-se de colocar detalhadamente o pedido ex: 5 unidades de peças 3D cor preta
                                </small>
                            </div>
                        </div>
                    </div>
                    @*1-BLOCO-START*@

                    @*2-BLOCO-START*@
                    <div class="row">
                        <div class="col-md-6 col-lg-3">
                            <div class="form-group">
                                <label for="valor">Valor cobrado</label>s
                                <div class="input-group mb-3">
                                    <span class="input-group-text" id="basic-addon1">R$</span>
                                    <input type="text" id="valor" name="valor" class="form-control">
                                </div>
                                <small id="valorHelp" class="form-text text-muted">
                                    Informação o valor que será cobrado
                                </small>
                            </div>
                        </div>
                        <div class="col-md-6 col-lg-3">
                            <div class="form-group">
                                <label for="status">Status</label>
                                <select class="form-select form-control" id="status" name="status">
                                    <option selected value="Pendente">Pendente</option>
                                    <option value="Cancelado">Cancelado</option>
                                    <option value="Finalizado">Finalizado</option>
                                </select>
                                <small id="statusHelp" class="form-text text-muted">
                                    Informação o status do pedido
                                </small>
                            </div>
                        </div>
                        <div class="col-md-6 col-lg-3">
                            <div class="form-group">
                                <label for="dataPedido">Data Pedido</label>
                                <input type="date" class="form-control" id="dataPedido" name="dataPedido" placeholder="Obrigatório" maxlength="20">
                                <small id="dataPedidoHelp" class="form-text text-muted">
                                    Informação a data que foi feito o pedido
                                </small>
                            </div>
                        </div>
                        <div class="col-md-6 col-lg-3">
                            <div class="form-group">
                                <label for="dataEntrega">Data Entrega</label>
                                <input type="date" class="form-control" id="dataEntrega" name="dataEntrega" placeholder="Obrigatório" maxlength="20">
                                <small id="dataEntregaHelp" class="form-text text-muted">
                                    Informação a data para entrega do pedido
                                </small>
                            </div>
                        </div>
                    </div>
                    @*2-BLOCO-END*@

                    @*3-BLOCO-START*@
                    <div class="row">
                        <div class="col-md-6 col-lg-4">
                            <div class="form-group">
                                <label for="arquivos">Anexos</label>
                                <input type="file" class="form-control" id="arquivos" name="arquivos">
                                <small id="arquivosHelp" class="form-text text-muted">
                                    Anexe aqui todos os arquivos do pedido ex: img. gcode. pdf.
                                </small>
                            </div>
                        </div>
                    </div>
                    @*3-BLOCO-END*@
                </div>

                @*4-BLOCO-START*@
                <div class="card-action">
                    <button id="Inserir" class="btn btn-success">Cadastrar</button>
                    <a class="btn btn-danger" href="@Url.Action("Index","Usuario")">Cancelar</a>
                </div>
                @*4-BLOCO-END*@
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {

        var controllerCadastrarPedido = '@Url.Action("CadastrarPedidos", "Cliente")';
        $(document).on('click', '#Inserir', FuncInserir);

        function FuncInserir()
        {
            //Validação dos campos
            if ($('#descricao').val() == "") {
                Swal.fire({
                    icon: "error",
                    title: "Oops...",
                    text: "O campo Descrição é Obrigatorio!"
                });
            }
            else if ($('#login').val() == "") {
                Swal.fire({
                    icon: "valor",
                    title: "Oops...",
                    text: "O campo Valor é Obrigatorio!"
                });
            }
            else if ($('#dataPedido').val() == "") {
                Swal.fire({
                    icon: "error",
                    title: "Oops...",
                    text: "O campo Data Pedido é Obrigatorio!"
                });
            }
            else if ($('#dataEntrega').val() == "") {
                Swal.fire({
                    icon: "error",
                    title: "Oops...",
                    text: "O campo Data Entrega é Obrigatorio!"
                });
            }
            else if ($('#arquivos').val() == "") {
                Swal.fire({
                    icon: "error",
                    title: "Oops...",
                    text: "O campo Arquivos é Obrigatorio!"
                });
            }
            else {
                CadastrarPedido();
            }

            function CadastrarPedido() {

                var formData = new FormData();

                formData.append('clienteId', '@ViewBag.ClienteId');
                formData.append('descricao', $('#descricao').val());
                formData.append('valor', $('#valor').val());
                formData.append('status', $('#status').val());
                formData.append('dataPedido', $('#dataPedido').val());
                formData.append('dataEntrega', $('#dataEntrega').val());
                formData.append('arquivos', $('#arquivos').prop('files')[0]);

                Swal.fire({
                    title: "Tem certeza?",
                    text: "Confirme para Cadastrar dados do Pedido!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Sim",
                    cancelButtonText: "Não",
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: controllerCadastrarPedido,
                            type: 'POST',
                            data: formData,
                            processData: false,
                            contentType: false,
                            success: function (data) {
                                if (data == "Erro ao Cadastrar o Pedido!") {
                                    Swal.fire({
                                        title: "Deleted!",
                                        text: data,
                                        icon: "error"
                                    });
                                }
                                else if (data == "Sucesso") {
                                    Swal.fire({
                                        position: "center",
                                        icon: "success",
                                        title: "Pedido Cadastrado com Sucesso",
                                        showConfirmButton: false,
                                        timer: 3500
                                    }).then(() => {
                                        window.location.href = '@Url.Action("ClientePedidos", "Cliente", new {id= ViewBag.ClienteId })';
                                    });
                                }
                            },
                            error: function (request, status, error) {
                                console.log(request.responseText);
                            }
                        });
                    }
                });
            }
        }
    });
</script>



