@model SGD.ViewModels.Clientes.ClienteViewModels

<div class="container" style="background-color:#f5f7fd">
    <div class="page-inner">

        <div class="page-header">
            <h3 class="fw-bold mb-3">Editar/Cliente</h3>
            <ul class="breadcrumbs mb-3">
                <li class="nav-home">
                    <a href="@Url.Action("Index","Home")">
                        <i class="fa fa-home"></i>
                    </a>
                </li>
                <li class="separator">
                    <i class="fa-solid fa-arrow-right"></i>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("Index","Home")">Home</a>
                </li>
                <li class="separator">
                    <i class="fa-solid fa-arrow-right"></i>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("Index","Cliente")">Clientes</a>
                </li>
                <li class="separator">
                    <i class="fa-solid fa-arrow-right"></i>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("Editar","Cliente")">Editar Cliente</a>
                </li>
            </ul>
        </div>
        <div class="col-md-12">
            <div class="card card-round">
                <div class="card-header">
                    <div class="card-title">Dados</div>
                    <div class="card-category">
                        Preencha com todas as informações necessárias
                    </div>
                </div>
                <div class="card-body">
                    @*0-BLOCO-START*@
                    <div class="row">
                        <div class="col-md-6 col-lg-4">
                            <div class="form-group">
                                <label for="fotoAtual">Foto Cliente</label>
                                <div class="avatar-xxl">
                                    <img src="data:image/png;base64,@Model.Foto" alt="image profile" class="avatar-img rounded">
                                </div>
                            </div>
                        </div>
                    </div>
                    @*0-BLOCO-END*@
                    @*1-BLOCO-START*@
                    <div class="row">
                        <div class="col-md-6 col-lg-4">
                            <div class="form-group">
                                <label for="nome">Nome Cliente</label>
                                <input type="text" class="form-control" id="Nome" name="Nomev" placeholder="Obrigatório" value="@Model.Nome">
                                <small id="nomeHelp" class="form-text text-muted">
                                    Lembre-se de confirmar se o nome esta correto
                                </small>
                            </div>
                        </div>
                        <div class="col-md-6 col-lg-4">
                            <div class="form-group">
                                <label for="login">Telefone</label>
                                <input type="tel" class="form-control" id="Telefone" name="Telefone" placeholder="Obrigatório" value="@Model.Telefone">
                                <small id="loginHelp" class="form-text text-muted">
                                    Para facilitar utilize o número do whatsapp
                                </small>
                            </div>
                        </div>
                        <div class="col-md-6 col-lg-4">
                            <div class="form-group">
                                <label for="email">E-mail</label>
                                <input type="email" class="form-control" id="Email" name="Email" placeholder="Obrigatório" value="@Model.Email">
                                <small id="emailHelp" class="form-text text-muted">
                                    Utilize seu e-mail corporativo
                                </small>
                            </div>
                        </div>
                    </div>
                    @*1-BLOCO-START*@

                    @*2-BLOCO-START*@
                    <div class="row">
                        <div class="col-md-6 col-lg-4">
                            <div class="form-group">
                                <label for="racf">Cidade</label>
                                <input type="text" class="form-control" id="Cidade" name="Cidade" placeholder="Obrigatório" value="@Model.Cidade">
                                <small id="racfHelp" class="form-text text-muted">
                                    Lembre-se de confirmar com o Cliente sua Cidade
                                </small>
                            </div>
                        </div>
                        <div class="col-md-6 col-lg-4">
                            <div class="form-group">
                                <label for="racf">CEP</label>
                                <input type="text" class="form-control" id="Cep" name="Cep" placeholder="Obrigatório" value="@Model.CEP">
                                <small id="racfHelp" class="form-text text-muted">
                                    Lembre-se de confirmar com o Cliente o CEP da Cidade
                                </small>
                            </div>
                        </div>
                        <div class="col-md-6 col-lg-4">
                            <div class="form-group">
                                <label for="racf">Endereço</label>
                                <input type="text" class="form-control" id="Endereco" name="Endereco" placeholder="Obrigatório" value="@Model.Endereco">
                                <small id="racfHelp" class="form-text text-muted">
                                    Lembre-se de confirmar com o Cliente sua Cidade
                                </small>
                            </div>
                        </div>
                    </div>
                    @*2-BLOCO-END*@

                    @*3-BLOCO-START*@
                    <div class="row">
                        <div class="col-md-6 col-lg-4">
                            <div class="form-group">
                                <label for="foto">Foto</label>

                                <input type="file" accept=".png" class="form-control" id="Foto" name="Foto">

                                <small id="fotoHelp" class="form-text text-muted">
                                    Utilize uma imagem em .PNG
                                </small>
                            </div>
                        </div>
                    </div>
                    @*3-BLOCO-END*@
                </div>

                @*4-BLOCO-START*@
                <div class="card-action">
                    <button id="Editar" class="btn btn-success">Cadastrar</button>
                    <a class="btn btn-danger" href="@Url.Action("Index","Cliente")">Cancelar</a>
                </div>
                @*4-BLOCO-END*@
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {

        var controllerEditarCliente = '@Url.Action("EditarCliente", "Cliente")';
        $(document).on('click', '#Editar', FuncInserir);

        function FuncInserir()
        {
            //Validação dos campos
            if ($('#Nome').val() == "") {
                Swal.fire({
                    icon: "error",
                    title: "Oops...",
                    text: "O campo Nome Completo é Obrigatorio!"
                });
            }
            else if ($('#Telefone').val() == "") {
                Swal.fire({
                    icon: "error",
                    title: "Oops...",
                    text: "O campo Telefone é Obrigatorio!"
                });
            }
            else if ($('#Email').val() == "") {
                Swal.fire({
                    icon: "error",
                    title: "Oops...",
                    text: "O campo E-mail é Obrigatorio!"
                });
            }
            else if ($('#Cidade').val() == "") {
                Swal.fire({
                    icon: "error",
                    title: "Oops...",
                    text: "O campo Cidade é Obrigatorio!"
                });
            }
            else if ($('#Cep').val() == "") {
                Swal.fire({
                    icon: "error",
                    title: "Oops...",
                    text: "O campo CEP é Obrigatorio!"
                });
            }
            else if ($('#Endereco').val() == "") {
                Swal.fire({
                    icon: "error",
                    title: "Oops...",
                    text: "O campo Endereço é Obrigatorio!"
                });
            }
            else {
                EditarCliente();
            }

            function EditarCliente() {
                var formData = new FormData();

                formData.append('nome', $('#Nome').val());
                formData.append('telefone', $('#Telefone').val());
                formData.append('email', $('#Email').val());
                formData.append('cidade', $('#Cidade').val());
                formData.append('cep', $('#Cep').val());
                formData.append('endereco', $('#Endereco').val());
                formData.append('fotoInput', $('#Foto').prop('files')[0]);

                Swal.fire({
                    title: "Tem certeza?",
                    text: "Confirme para Editar os dados do Cliente!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Sim",
                    cancelButtonText: "Não",
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: controllerEditarCliente,
                            type: 'POST',
                            data: formData,
                            processData: false,
                            contentType: false,
                            success: function (data) {
                                if (data == "Erro ao Editar Cliente!") {
                                    Swal.fire({
                                        title: "Deleted!",
                                        text: data,
                                        icon: "success"
                                    });
                                }
                                else if (data == "Sucesso") {
                                    Swal.fire({
                                        position: "center",
                                        icon: "success",
                                        title: "Cliente Editado com Sucesso",
                                        showConfirmButton: false,
                                        timer: 3500
                                    }).then(() => {
                                        window.location.href = '@Url.Action("Index", "Cliente")';
                                    });
                                }
                            },
                            error: function (request, status, error) {
                                console.log(request.responseText);
                            }
                        });
                    }
                });
            }
        }
    });
</script>